package com.collabmods.techexpansion;

import net.minecraft.block.Block;
import net.minecraft.block.material.Material;
import net.minecraft.creativetab.CreativeTabs;

public class CopperOre extends Block{

	protected CopperOre(Material material) {
		super(material);
		this.setBlockName("copperOre").setBlockTextureName("techExpansion:copper_ore").setCreativeTab(CreativeTabs.tabBlock).setHardness(3.0f).setResistance(15.0f).setStepSound(soundTypeStone).setHarvestLevel("pickaxe", 1);
	}
	
}
